<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/uniform_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.kevin.tech.kevinsummary.view.RoundedImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_avatar"
        app:riv_border_color="@color/transparent"
        app:riv_border_width="1px"
        app:riv_oval="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Kevin Summary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/textSize24"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_blog_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/uniform_padding"
        android:paddingRight="@dimen/uniform_padding"
        android:paddingTop="@dimen/padding_5">

        <com.kevin.tech.kevinsummary.view.RoundedImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_logo_github"
            app:riv_border_color="@color/transparent"
            app:riv_border_width="1px"
            app:riv_oval="true" />

        <com.kevin.tech.kevinsummary.view.RoundedImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/uniform_margin"
            android:background="@drawable/bg_logo_csdn"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_5"
            android:src="@drawable/ic_logo_csdn"
            app:riv_border_color="@color/transparent"
            app:riv_border_width="1px"
            app:riv_oval="true" />

        <com.kevin.tech.kevinsummary.view.RoundedImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/uniform_margin"
            android:background="@drawable/bg_logo_jianshu"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_5"
            android:src="@drawable/ic_logo_jianshu"
            app:riv_border_color="@color/transparent"
            app:riv_border_width="1px"
            app:riv_oval="true" />

        <com.kevin.tech.kevinsummary.view.RoundedImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/uniform_margin"
            android:background="@drawable/bg_logo_sf"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_5"
            android:src="@drawable/ic_logo_segment_fault"
            app:riv_border_color="@color/transparent"
            app:riv_border_width="1px"
            app:riv_oval="true" />
    </LinearLayout>


</LinearLayout>
