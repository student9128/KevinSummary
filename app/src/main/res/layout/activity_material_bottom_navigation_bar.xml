            android:layout_marginTop="@dimen/margin_20"></com.ashokvarma.bottomnavigation.BottomNavigationBar>

        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/bottom_navigation_bar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"></com.ashokvarma.bottomnavigation.BottomNavigationBar>        <com.ashokvarma.bottomnavigation.BottomNavigationBar
