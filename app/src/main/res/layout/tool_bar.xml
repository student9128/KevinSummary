<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_title_color"
        android:elevation="@dimen/elevation_15"
        android:theme="@style/ToolbarStyle"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:titleTextAppearance="@style/ToolbarText">

        <!--<ImageView-->
        <!--android:id="@+id/iv_back"-->
        <!--android:layout_width="56dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="start"-->
        <!--android:background="@drawable/bg_select_state_title_bar_right"-->
        <!--android:clickable="true"-->
        <!--android:src="@drawable/ic_back_m" />-->

        <com.kevin.tech.kevinsummary.view.AnyTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/short_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone"
            app:typeface="OpenSans-SemiBold.ttf" />

        <ImageView
            android:id="@+id/iv_function"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:clickable="true"
            android:padding="@dimen/uniform_padding"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>
</LinearLayout>